<h2>Lista de postagens: </h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova Postagem</button></a>

{{#each postagens}}
    <div class="card mt-4 bg-dark">
        <div class="card-body">
            <h4 style="color: white;">{{titulo}}</h4>
            <p style="color: white;">Descrição: {{descricao}}</p>
            <small style="color: white;">Data: {{data}}</small><br>
            <small style="color: white;">Categoria: {{categoria.nome}}</small><br>
            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-primary mt-2">Editar postagen</button></a>
            <a href="/admin/postagens/deletar/{{_id}}"><button class="btn btn-danger mt-2">Deletar postagen</button></a>
        </div>
    </div>
{{else}}
    <p class="mt-2" style="color: white;">Nenhuma Postagem cadastrada</p>
{{/each}}